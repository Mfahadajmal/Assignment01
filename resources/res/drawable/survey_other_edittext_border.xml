<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_focused="false"
        android:state_pressed="false">
        <layer-list>
            <item
                android:left="-2dp"
                android:top="-2dp"
                android:right="-2dp">
                <shape android:shape="rectangle">
                    <stroke
                        android:width="1dp"
                        android:color="@color/survey_edit_text_border_color"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item
                android:left="-4dp"
                android:top="-4dp"
                android:right="-4dp">
                <shape android:shape="rectangle">
                    <stroke
                        android:width="2dp"
                        android:color="@color/survey_accent_color"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
