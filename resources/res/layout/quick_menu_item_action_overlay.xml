<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/quick_menu_overlay_message_background"
        android:padding="@dimen/quick_menu_overlay_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/quick_menu_overlay_margin"
        android:alpha="0.8">
        <ImageView
            android:layout_gravity="top|center_horizontal"
            android:id="@+id/quick_menu_left_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_swipe_right"
            android:rotation="-90"/>
        <android.support.v7.widget.AppCompatTextView
            android:textSize="@dimen/quick_menu_overlay_text_size"
            android:textColor="@color/quick_menu_overlay_text_color"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/quick_menu_text"
            android:paddingTop="@dimen/quick_menu_overlay_padding_top"
            android:paddingBottom="@dimen/quick_menu_overlay_padding_bottom"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textFontWeight="@integer/quick_menu_overlay_font_weight"
            app:fontFamily="@string/accessibility_font"/>
        <ImageView
            android:layout_gravity="bottom|center_horizontal"
            android:id="@+id/quick_menu_right_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_swipe_right"
            android:rotation="90"/>
    </LinearLayout>
</LinearLayout>
