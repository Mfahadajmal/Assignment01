<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/training_chip"
        android:background="@drawable/training_list_item_background"
        android:padding="@dimen/training_link_padding"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/training_link_margin_top">
        <ImageView
            android:gravity="start|top"
            android:id="@+id/training_chip_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/training_link_padding"
            android:paddingEnd="0dp">
            <android.support.v7.widget.AppCompatTextView
                android:textSize="@dimen/training_text_size"
                android:textColor="@color/training_text_color"
                android:id="@+id/training_chip_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineHeight="@dimen/training_text_height"
                app:fontFamily="@string/accessibility_font_medium"/>
            <android.support.v7.widget.AppCompatTextView
                android:textSize="@dimen/training_subtext_size"
                android:textColor="@color/training_text_color"
                android:id="@+id/training_chip_subtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:lineHeight="@dimen/training_subtext_height"
                app:fontFamily="@string/accessibility_font"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
