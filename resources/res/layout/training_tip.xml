<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/training_tip_background"
        android:padding="@dimen/training_note_padding"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/training_padding_top">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/training_tip_layout_side_margin"
            android:layout_marginTop="@dimen/training_tip_layout_side_margin"
            android:layout_marginRight="@dimen/training_tip_layout_side_margin">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_tips_and_updates_24dp"/>
            <android.support.v7.widget.AppCompatTextView
                android:textSize="@dimen/training_tip_title_text_size"
                android:textColor="@color/training_icon_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/training_tip_title_margin"
                android:text="@string/training_tip"
                android:lineHeight="@dimen/training_tip_title_text_height"
                app:fontFamily="@string/accessibility_font"/>
        </LinearLayout>
        <android.support.v7.widget.AppCompatTextView
            android:textSize="@dimen/training_text_size"
            android:textColor="@color/training_text_color"
            android:id="@+id/training_tip_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/training_tip_layout_side_margin"
            android:layout_marginTop="@dimen/training_tip_layout_side_margin"
            android:layout_marginRight="@dimen/training_tip_layout_side_margin"
            android:layout_marginBottom="@dimen/training_tip_layout_side_margin"
            android:lineHeight="@dimen/training_text_height"
            app:fontFamily="@string/accessibility_font"/>
    </LinearLayout>
</LinearLayout>
