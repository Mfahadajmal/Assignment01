<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="end"
    android:id="@+id/survey_prompt_buttons"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginBottom="16dp"
    style="@style/SurveyInvitationStyle">
    <com.google.android.libraries.surveys.internal.view.ButtonWithMaxTextSize
        android:textSize="@dimen/survey_prompt_buttons_text_size"
        android:id="@+id/survey_prompt_no_thanks_button"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:text="@string/survey_prompt_no_thanks"
        app:textSizeMaxDp="@dimen/survey_prompt_buttons_max_text_size"
        style="@style/SurveyNoThanksButtonStyle"/>
    <com.google.android.libraries.surveys.internal.view.ButtonWithMaxTextSize
        android:textSize="@dimen/survey_prompt_buttons_text_size"
        android:id="@+id/survey_prompt_take_survey_button"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:text="@string/survey_prompt_take_our_survey"
        app:textSizeMaxDp="@dimen/survey_prompt_buttons_max_text_size"
        style="@style/SurveyTakeSurveyButtonStyle"/>
</LinearLayout>
