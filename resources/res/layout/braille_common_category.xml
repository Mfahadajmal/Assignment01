<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/braille_common_category_shape"
    android:padding="@dimen/braille_common_category_padding"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/braille_common_category_margin_top"
    android:layout_marginHorizontal="@dimen/braille_common_category_margin_horizontal">
    <ImageView
        android:gravity="start|top"
        android:id="@android:id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/braille_common_category_icon_margin_top"
        android:tint="@color/braille_common_category_color"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/braille_common_category_text_padding_start"
        android:paddingEnd="@dimen/braille_common_category_text_padding_end">
        <TextView
            android:textSize="@dimen/braille_common_category_primary_text_size"
            android:textColor="@color/settings_primary_text"
            android:id="@android:id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@string/accessibility_font"/>
        <TextView
            android:textSize="@dimen/braille_common_category_secondary_text_size"
            android:textColor="@color/settings_secondary_text"
            android:id="@android:id/summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/braille_common_category_secondary_margin_top"
            android:fontFamily="@string/accessibility_font"/>
    </LinearLayout>
</LinearLayout>
