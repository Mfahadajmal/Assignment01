<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/survey_controls_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.button.MaterialButton xmlns:app="http://schemas.android.com/apk/res-auto"
        android:textSize="@dimen/survey_prompt_buttons_text_size"
        android:id="@+id/survey_next"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="12dp"
        android:minWidth="@dimen/survey_button_min_width_size"
        android:text="@string/survey_next"
        app:enforceMaterialTheme="false"
        style="@style/SurveyButtonStyle"/>
    <include
        android:id="@+id/survey_controls_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/survey_divider_horizontal_margin"
        android:layout_marginRight="@dimen/survey_divider_horizontal_margin"
        layout="@layout/survey_divider"/>
    <include
        android:id="@+id/survey_controls_legal_text"
        layout="@layout/survey_legal_text"/>
</LinearLayout>
