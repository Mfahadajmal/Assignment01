<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1">
    <FrameLayout
        android:layout_gravity="end"
        android:id="@+id/survey_rating_number_layout"
        android:background="@drawable/survey_rounded_button_background"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="48dp"
        android:minHeight="48dp">
        <com.google.android.material.card.MaterialCardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_gravity="center"
            android:id="@+id/survey_rating_number_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/google_transparent"
            app:cardCornerRadius="4dp"
            app:enforceMaterialTheme="false"
            app:strokeColor="@color/survey_secondary_text_color">
            <TextView
                android:textSize="@dimen/survey_rating_number_text_size"
                android:textColor="@color/survey_primary_text_color"
                android:layout_gravity="center"
                android:id="@+id/survey_rating_number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>
</FrameLayout>
