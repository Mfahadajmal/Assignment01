<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:gravity="start|top"
        android:id="@+id/training_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/training_padding_top"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="0dp">
        <android.support.v7.widget.AppCompatTextView
            android:textSize="@dimen/training_text_size"
            android:textColor="@color/training_text_color"
            android:id="@+id/training_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/training_padding_top"
            android:lineHeight="@dimen/training_text_height"
            app:fontFamily="@string/accessibility_font"/>
        <android.support.v7.widget.AppCompatTextView
            android:textSize="@dimen/training_subtext_size"
            android:textColor="@color/training_subtext_color"
            android:id="@+id/training_subtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:lineHeight="@dimen/training_subtext_height"
            app:fontFamily="@string/accessibility_font"/>
    </LinearLayout>
</LinearLayout>
