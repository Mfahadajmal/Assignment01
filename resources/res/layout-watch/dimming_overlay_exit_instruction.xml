<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="bottom"
    android:orientation="vertical"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/message_line_1"
        android:layout_marginBottom="10dp"
        android:text="@string/screen_dimming_exit_instruction_line1"
        style="@style/DimmingInstructionText"/>
    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:indeterminate="false"
        style="?android:attr/progressBarStyleHorizontal"/>
    <android.support.v7.widget.AppCompatTextView
        android:textSize="14sp"
        android:textColor="#deffffff"
        android:gravity="center_vertical"
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginBottom="@dimen/dim_screen_bottom_offset"
        app:fontFamily="@string/accessibility_font_medium"
        style="@style/DimmingInstructionText"/>
</LinearLayout>
