<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:focusable="false"
    android:descendantFocusability="afterDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/survey_question_header_logo_text"
        android:paddingBottom="@dimen/survey_display_logo_margin_bottom"
        android:focusable="true"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp">
        <include
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            layout="@layout/survey_display_logo"/>
        <TextView
            android:textSize="@dimen/survey_question_text_size"
            android:textColor="@color/survey_primary_text_color"
            android:id="@+id/survey_question_text"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="@dimen/survey_header_question_line_spacing_multiplier"
            android:fontFamily="@font/google_sans_medium"
            style="@style/SurveyQuestionTextStyle"/>
    </LinearLayout>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/survey_accent_color"
        android:id="@+id/survey_follow_up_url"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:minWidth="48dp"
        android:minHeight="48dp"
        style="@style/SurveyFollowUpUrlStyle"/>
</LinearLayout>
